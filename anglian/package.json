{
  "name": "webpack-es6-sass-setup",
  "version": "0.1.0",
  "description": "A setup for Webpack with ES6 and Sass, with CSS-JS linting and Accessibility tests",
  "main": "webpack.config.js",
  "scripts": {
    "start": "NODE_ENV=DEV ./node_modules/.bin/webpack-dev-server --config webpack.config.js --port 6001 --hot --inline --host 0.0.0.0",
    "test": "npm run a11y",
    "bundle": "./node_modules/.bin/webpack --config webpack.config.js",
    "jslint": "eslint ./src --ignore-pattern vendor/*.js *spec.js --cache",
    "csslint": "stylelint ./src/scss --fix --config .stylelintrc",
    "lint": "npm run csslint && npm run jslint",
    "clean": "rm -rf build/*",
    "build": "npm run clean && NODE_ENV=PROD webpack -d --progress --colors --config webpack.config.js",
    "a11y": "pa11y --config pa11y.config.json http://localhost:6001"
  },
  "pre-commit": [
    "csslint",
    "test"
  ],
  "author": "pbasto adapted from Aki Karkkainen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/arakno/webpack-es6-sass-setup.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.4.2",
    "es6-promise": "^4.2.8",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^6.0.0",
    "html-loader": "^1.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "node-sass": "^4.13.1",
    "pa11y": "^5.3.0",
    "postcss-loader": "^3.0.0",
    "postcss-sorting": "^5.0.1",
    "pre-commit": "^1.2.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylefmt": "^6.0.3",
    "stylelint": "^13.2.1",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.16.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "stylelint-webpack-plugin": "^1.2.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dashboard": "^3.2.0",
    "webpack-dev-server": "^3.10.3"
  },
  "keywords": [
    "babel",
    "boilerplate",
    "es6",
    "sass",
    "starter-kit",
    "workflow",
    "webpack"
  ],
  "dependencies": {}
}
